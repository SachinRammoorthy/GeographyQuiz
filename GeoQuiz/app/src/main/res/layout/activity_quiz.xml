<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.android.tflitecamerademo.QuizActivity">






        <android.support.v7.widget.CardView
            android:elevation="2dp"
            android:id="@+id/explore"
            android:layout_weight="1"
            android:layout_width="match_parent"
            app:cardCornerRadius="5d"
            android:layout_height="0dp"
            android:layout_margin="5dp"

            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                >





                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eiffel_tower"

                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPLORE"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:padding="20dp"
                    />

                <TextView
                    android:id="@+id/description_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A brief description about the feature."
                    android:layout_below="@id/name"
                    />

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/quiz"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/google_earth"

                    />

                <TextView
                    android:id="@+id/name_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:padding="20dp"
                    />

                <TextView
                    android:id="@+id/description_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A brief description about the feature."
                    android:layout_below="@id/name_quiz"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


</LinearLayout>
