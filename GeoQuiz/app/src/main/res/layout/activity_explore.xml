<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tflitecamerademo.ExploreActivity">

    <!--
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/eiffel"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/eiffel_tower"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eiffel Tower"
            android:layout_weight="0.25"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/taj"
        android:layout_below="@id/eiffel"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/taj"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taj Mahal"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/statue_of_liberty"
       android:layout_below="@id/taj"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/sol"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statue of Liberty"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/machu"
        android:layout_below="@id/statue_of_liberty"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/macchu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machu Picchu"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/pyramids"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/machu"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/pyramids"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pyramids of Giza"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/christ"
        android:layout_below="@id/pyramids"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/christ"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Christ the Redeemer"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/colosseum"
        android:layout_below="@id/christ"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/colosseum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roman Colosseum"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:id="@+id/chichen"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp"
        android:layout_below="@id/colosseum"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/chichen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chichen Itza"
                android:layout_weight="0.25"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:padding="20dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>
